{
  "name": "cms-spotlight-2025",
  "version": "1.0.0",
  "description": "Spotlight CMS Static Site Generator (2025 version)",
  "type": "module",
  "main": "publican.config.js",
  "scripts": {
    "preview": "node --env-file=.env --env-file=.env.preview ./publican.config.js",
    "stagedeploy": "npm run staging && npm run stagecopy && npm run stagecache",
    "staging": "node --env-file=.env --env-file=.env.staging ./publican.config.js",
    "stagecopy": "gcloud storage rsync /home/tezos/spotlight.staging gs://tf-cms-spotlight-staging --recursive --delete-unmatched-destination-objects --checksums-only --continue-on-error --clear-custom-metadata --no-user-output-enabled --gzip-in-flight=.html,.xml,.css,.js,.txt,.svg",
    "stagecache": "gcloud compute url-maps invalidate-cdn-cache tezos-spotlight-staging --path \"/*\" --async",
    "productiondeploy": "npm run productioncopy && npm run productioncache",
    "productioncopy": "gcloud storage rsync /home/tezos/spotlight.staging gs://tf-cms-spotlight-production --recursive --delete-unmatched-destination-objects --checksums-only --continue-on-error --clear-custom-metadata --no-user-output-enabled --gzip-in-flight=.html,.xml,.css,.js,.txt,.svg",
    "productioncache": "gcloud compute url-maps invalidate-cdn-cache tezos-spotlight-production --path \"/*\" --async",
    "start": "node --env-file=.env --env-file=.env.dev ./publican.config.js"
  },
  "homepage": "https://github.com/tezosweb/cms-spotlight-2025#readme",
  "bugs": {
    "url": "https://github.com/tezosweb/cms-spotlight-2025/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tezosweb/cms-spotlight-2025.git"
  },
  "license": "MIT",
  "author": "Craig Buckler",
  "keywords": [
    "Tezos",
    "Spotlight",
    "CMS",
    "SSG",
    "static site"
  ],
  "dependencies": {
    "esbuild": "0.27.1",
    "image-meta": "0.2.2",
    "publican": "0.12.0"
  },
  "devDependencies": {
    "livelocalhost": "1.2.4"
  }
}
